@{
    ViewData["Title"] = "Add Course";
}
@model LightCMS.DTO.CourseDTO

<body>
<div class="wrapper">
    <div id="sb-partialDiv">
        @await Component.InvokeAsync("Sidebar", new { })
    </div>
    <div class="main">
        <div id="sb-partialDiv">
            @await Component.InvokeAsync("Navbar", new { })
        </div>
        <main class="content">
            <div class="mb-3">
                <h1 class="h3 d-inline align-middle">Add new course</h1>
                <form method="post">
                    <div asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="CourseId"/>
                    <div class="row">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Course name</h5>
                            </div>
                            <div class="card-body">
                                <input asp-for="CourseName" class="form-control"/>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Slot</h5>
                            </div>
                            <div class="card-body">
                                <input asp-for="Slot" class="form-control"/>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Semester</h5>
                            </div>
                            <div class="card-body">
                                <select asp-for="SemesterId" class="form-select mb-3">
                                    @foreach (var semester in ViewBag.Semester)
                                    {
                                        <option value="@semester.SemesterID">@semester.SemesterID</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Subject</h5>
                            </div>
                            <div class="card-body">
                                <select asp-for="SubjectCode" class="form-select mb-3">
                                    @foreach (var subject in ViewBag.Subject)
                                    {
                                        <option value="@subject.SubjectCode">@subject.SubjectName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Add"/>
                    </div>
                </form>
            </div>
        </main>
        <div id="sb-partialDiv">
            @await Component.InvokeAsync("Footer", new { })
        </div>
    </div>

</div>
</body>

<script src="~/js/app.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>