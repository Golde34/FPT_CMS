@using LightCMS.DTO;
@model NotificationDTO
@{
    ViewData["Title"] = "Detail";

    Dictionary<object, object> dict = ViewBag.Comment;
    var accountId = "";
    if (Context.Session.GetString("AccountId") != null)
    {
        accountId = Context.Session.GetString("AccountId");
    }
}

<body>
    <div class="wrapper">

        <div id="sb-partialDiv">
            @await Component.InvokeAsync("Sidebar", new {})
        </div>

        <div class="main">
            <div id="sb-partialDiv">
                @await Component.InvokeAsync("Navbar", new {})
            </div>

            <main class="content">
                <div class="container-fluid p-0 col-lg-10">

                    <div class="mb-3">
                        <h1 class="h3 d-inline align-middle">Activities</h1>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-xl-9">
                            <div class="card">
                                <div class="card-body h-30">
                                    <div class="d-flex align-items-start">
                                        <a class="btn btn-primary" href="#" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">
                                            Announce something to your class
                                        </a>
                                    </div>
                                </div>
                            </div>
                            @foreach (var notification in ViewBag.Notification)
                            {
                                <div class="card">
                                    <div class="card-body h-50">
                                        <div class="d-flex align-items-start">
                                            <img src="~/img/avatars/avatar.jpg" width="36" height="36" class="rounded-circle me-2" alt="Charles Hall">
                                            <div class="flex-grow-1">
                                                <small class="float-end text-navy">30m ago</small>
                                                <strong>Charles Hall</strong>
                                                <small class="text-muted">Today 7:21 pm</small>
                                                <div class="p-2 mt-1">
                                                    @notification.Text
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <button type="button" class="col-6 btn btn-light">Like</button>
                                            <button type="button" class="col-6 btn btn-light">Comment</button>
                                        </div>
                                        <br />
                                        @foreach (var comment in dict[notification.NotificationId])
                                        {
                                            <div class="d-flex align-items-start">
                                                <img src="~/img/avatars/avatar.jpg" width="36" height="36" class="rounded-circle me-2" alt="Charles Hall">
                                                <div class="card flex-grow-1">
                                                    <div class="m-1">
                                                        <strong>Charles Hall</strong>
                                                        <div class="p-2 mt-1" style="background-color: #F5F7FB">
                                                            @comment.Text
                                                        </div>
                                                        <small class="text-muted">Today 7:21 pm</small>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            }
                            <div class="d-grid">
                                <a asp-controller="Course" asp-action="Topic" asp-route-courseId="@ViewBag.CourseId"  class="btn btn-primary">Load more</a>
                            </div>
                        </div>

                        <div class="col-md-4 col-xl-3">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Profile Details</h5>
                                </div>
                                <div class="card-body text-center">
                                    <img src="~/img/avatars/avatar-4.jpg" alt="Christina Mason" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                                    <h5 class="card-title mb-0">Christina Mason</h5>
                                    <div class="text-muted mb-2">Lead Developer</div>

                                    <div>
                                        <a class="btn btn-primary btn-sm" href="#">Follow</a>
                                        <a class="btn btn-primary btn-sm" href="#"><span data-feather="message-square"></span> Message</a>
                                    </div>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">Skills</h5>
                                    <a href="#" class="badge bg-primary me-1 my-1">HTML</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">JavaScript</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">Sass</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">Angular</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">Vue</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">React</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">Redux</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">UI</a>
                                    <a href="#" class="badge bg-primary me-1 my-1">UX</a>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">About</h5>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Lives in <a href="#">San Francisco, SA</a></li>

                                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Works at <a href="#">GitHub</a></li>
                                        <li class="mb-1"><span data-feather="map-pin" class="feather-sm me-1"></span> From <a href="#">Boston</a></li>
                                    </ul>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">Elsewhere</h5>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-1"><a href="#">staciehall.co</a></li>
                                        <li class="mb-1"><a href="#">Twitter</a></li>
                                        <li class="mb-1"><a href="#">Facebook</a></li>
                                        <li class="mb-1"><a href="#">Instagram</a></li>
                                        <li class="mb-1"><a href="#">LinkedIn</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <div class="modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Notification</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div>@accountId</div>
                        <form method="POST" asp-controller="Course" asp-action="AddNotification" enctype="multipart/form-data">
                            <div class="modal-body">
                                <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />
                                <input type="hidden" name="AccountId" value="@accountId" />
                                <input type="hidden" name="UploadFile" value="" />
                                <div class="form-group">
                                    <label asp-for="Text" class="control-form-label">Announce something here:</label>
                                    <textarea asp-for="Text" class="form-control" rows="10"></textarea>
                                </div>
                                <div class="form-group">
                                    <label id="file" class="control-label"><i class="align-middle" data-feather="upload"></i></label>
                                    <input id="file" name="file" />
                                </div>
                                <br />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="POST" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div id="sb-partialDiv">
                @await Component.InvokeAsync("Footer", new {})
            </div>
        </div>
    </div>
</body>

<script src="~/js/app.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
